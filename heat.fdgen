hx = NamedLiteral(name="hx", value=0.014)
hy = NamedLiteral(name="hy", value=0.014)
dt = NamedLiteral(name="dt", value=0.1)
alpha = NamedLiteral(name="alpha", value=1e-4)
u = Field(name="heat", rank=0, spatial_stagger_strategy="none")
heat_eq = Equation(Dt(u), alpha * div(grad(u)))
step = Solve(name="step", spatial_order=1, temporal_order=1, equations=[heat_eq], delta_t=dt)
m = Mesh(name="HeatSolver", dimension=2, fields=[u], solves=[step], grid_spacing=[hx,hy])
